tap "thoughtbot/formulae"

# Install 'rcm' for dot-file symlinking
brew "rcm"

# Install a more recent version of 'vim'
brew "vim"

# Install some other useful utilities like `sponge`.
brew "moreutils"

# Install GNU `find`, `locate`, `updatedb`, and `xargs`
brew "findutils"

# Install `wget`
brew "wget"

# A modern version of ‘ls’.
brew "exa"
